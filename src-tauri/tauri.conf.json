{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "jumpscare",
  "version": "0.1.0",
  "identifier": "com.jumpscare.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "8====D",
        "label": "main",
        "width": 100,
        "height": 100,
        "visible": true,
        "fullscreen": false,
        "resizable": false
      },
      {
        "title": "",
        "label": "image_popup",
        "width": 800,
        "height": 600,
        "url": "popup.html",
        "fullscreen": true,
        "resizable": false,
        "visible": false,
        "alwaysOnTop": true,
        "decorations": false,
        "focus": true,
        "skipTaskbar": true
      },
      {
        "title": "",
        "label": "image_popup2",
        "width": 800,
        "height": 600,
        "url": "popup2.html",
        "fullscreen": true,
        "resizable": false,
        "visible": false,
        "alwaysOnTop": true,
        "decorations": false,
        "focus": true,
        "skipTaskbar": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
